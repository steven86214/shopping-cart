
{{#if products}}
<div class = "row">
    <div class = "col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul clsss="list-group">
            {{#each products}}
                <li class = "list-group-item">
                    <span class="badge">{{this.qty}}</span>
                    <strong>{{this.item.title}}</strong>
                    <span class = "label label-success">${{this.price}}</span>
                    <div class = "btn-group">
                        <button class ="btn btn-primary btn-xs dropdown-toggle" type = "button">Action<span class = "caret"></span></button>
                        <ul clsss = "dropdown-menu">
                            <li><a href="#">Reduce by 1</a> </li>
                            <li><a hred="#">Remove All</a></li>
                        </ul>

                    </div>
                    </span>
                </li>
            {{/each}}

        </ul>
    </div>
</div>
<div class = "row">
    <div class = "col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total: {{this.totalprice}}</strong>
    </div>
</div>
<hr>
<div class = "row">
    <div class = "btn-group">
        <div class = "col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href = "/checkout" type = "button" class ="btn btn-success">chechout</a>
        </div>
    </div>
</div>
{{else}}
<div class = "row">
    <div class = "btn-group">
        <h2>No Item in Cart</h2>
    </div>
</div>

{{/if}}